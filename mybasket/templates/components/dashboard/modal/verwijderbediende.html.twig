<!-- Modal -->
<form method="post" action="{{ request_uri }}">
    <div id="modalVerwijderBediende" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Bediende verwijderen</h4>
                </div>
                <div class="modal-body">
                    <p>Weet u zeker dat u de bediende '<span class="naam"></span>' geen bediende meer wil maken ?</p>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="verwijder" class="ID">
                    <input type="hidden" name="IDWinkel" class="IDWinkel">
                    <input type="hidden" name="Gebruiker" class="naamform">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuleren</button>
                    <button type="submit" class="btn btn-primary">Verwijderen</button>
                </div>
            </div>
        </div>
    </div>
</form>